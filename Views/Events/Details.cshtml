@model PlaniEvents123.Models.Event


<div class="card shadow border-0 mt-4 mb-4">
    <div class="card-header bg-secondary bg-gradient  py-4">
        <div class="row">
            <div class="col-12 text-center">
                <h3 class=" text-uppercase">@Model.Nom</h3>
                
            </div>
        </div>
    </div>
    <div class="card-body ">
        <div class="py-3 d-flex flex-column align-items-center">
          
            <p class="text-dark text-left">@Model.Description</p>
            <table class="table table-hover" style="max-width: 40rem;">
                <thead>
                    <tr>
                        <th scope="col">Jour</th>
                        <th scope="col">Temps</th>
                        <th scope="col">Lieu</th>
                        <th scope="col">Categorie</th>
                    </tr>
                </thead>
                <tbody>
                    
                    <tr>
                        
                        <td class="text-danger fw-bold">@Model.Jour</td>
                        <td class="text-danger fw-bold">@Model.Temps</td>
                        <td class="text-danger fw-bold">@Model.Lieu</td>
                        <td class="text-danger fw-bold">@Model.Categorie</td>
                    </tr>
                    </tbody>
            </table>
            
            <div class="list-group">
                 <ul>
                    <li class="list-group-item list-group-item-action active">Liste des participants</li>
                    @if (@Model.Participants.Any()) {
                        @foreach (var participant in Model.Participants){
                          <li class="list-group-item list-group-item-action">@participant.UserName</li>
                        
                        }
                    }
                    else
                    {
                        <li class="list-group-item list-group-item-action">Aucun participant pour l'instant</li>
                    }
                </ul>
            </div> 
             <div class="row">
                <div class="col-6 pb-1">
                 <a asp-action="GetAllEvents"type=" button" class="btn btn-outline-primary">Retour</a>
                </div>
             </div>
                    

            
        </div>
    </div>
</div>

