@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
<form id="account" method="post">
    <div class="mt-4">
        <div class="row pb-2">
            <h2 class="tet-primary">Connexion</h2>
            <hr />
        </div>
    </div>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group mb-3 row">
        <label asp-for="Input.Email" class="control-label"></label>
        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
        <span asp-validation-for="Input.Email" class="text-danger"></span>
    </div>
    <div class="form-group mb-3 row">
        <label asp-for="Input.Password" class="control-label"></label>
        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
        <span asp-validation-for="Input.Password" class="text-danger"></span>
    </div>
    <div>
       <div class="checkbox">
            <label asp-for="Input.RememberMe" class="form-label">
                <input class="form-check-input" asp-for="Input.RememberMe" />
                @Html.DisplayNameFor(m => m.Input.RememberMe)
            </label>
       </div>
    </div>
    <div class="row">
        <div class="form-group col-6 col-md-3">
            <input id="login-submit" type="submit" value="Connexion" class="btn btn-primary form-control" />
        </div>
        
    </div>
    <div>
       <p>
          <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
       </p>
       <p>
         <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
       </p>
        <p>
          <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
        </p>
    </div>
</form>
        
    


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
